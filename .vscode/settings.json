{
    "python.venvPath": "C:\\Users\\ez945\\.virtualenvs\\Demo-N46mv50q",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.autoComplete.addBrackets": true,
    "python.linting.pylintArgs": [
        "--load-plugins", "pylint_django",
        "--disable=C,R,W, --enable=unreachable,duplicate-key,unnecessary-semicolon,global-variable-not-assigned,unused-variable,binary-op-exception,bad-format-string,anomalous-backslash-in-string,bad-open-mode",
        "--disable=django-not-configured",
        "--django-settings-module=<mainapp>.settings",
    ],
    "files.trimTrailingWhitespace": true, // 儲存的時候，會幫你自動過濾多餘的空格
    //"files.autoSave": "onFocusChange", // 是否自動儲存檔案
    "files.autoSave": "onWindowChange",
    //"editor.formatOnSave": true, //存檔後自動執行
    //"prettier.singleQuote": true, //使用單引號

    "[python]":{
        "editor.formatOnType": true,
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "editor.detectIndentation": true,
        "editor.tabSize": 4,
        "editor.wordWrap": "on",
        "editor.bracketPairColorization.enabled": true,
        "editor.guides.bracketPairs":"active"

    },
    "git.ignoreLimitWarning": true,


}